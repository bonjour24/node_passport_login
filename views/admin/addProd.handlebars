<div class="container m-auto" style="background:#ea0a0a; width:100%; border-radius:25px;">
  <div style="color: white;" class="text-center p-2"><h3 style="font-weight: 600;">Add Product</h3></div>
</div>
<br><br>
<div class="container p-5" style="background-color: white; border-radius:20px;">
  <form action="/admin/add" method="POST">
        <div class="form-group">
          <label for="cat">Cat</label>
          <input
            type="name"
            id="category"
            name="category"
            class="form-control"
            placeholder="Enter category"
          />
        </div>
        <div class="form-group">
          <label for="name">name</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter name"
          />
        </div>
        <div class="form-group">
          <label for="price">price</label>
          <input
            type="number"
            id="price"
            name="price"
            class="form-control"
            placeholder="set price"
          />
        </div>
        <div class="form-group">
          <label for="image">Image</label>
          <input
            type="text"
            id="image"
            name="image"
            class="form-control"
            placeholder="Add image"
          />
        </div>
        <label for="vendor"></label>
	<div class="row text-center">
		<button type="submit" class="btn m-auto w-10 btn-outline-dark">
		  ADD	
		</button>
	</div>      
</form>
</div>
