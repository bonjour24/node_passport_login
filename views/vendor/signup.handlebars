		<script>
		var i = 0;
		var txt = ['Flowers', 'Plants', 'Gifts', 'Suprises']
		var speed = 50;
		var j = txt.length;
		var k = 0;

		function clear(){
			if (j <= txt[k].length && j>=0) {
		    document.getElementById("msg").innerHTML = txt[k].slice(0,j);
		    console.log(j)
		    setTimeout(clear, speed);
			j--;
			    if(j==-1){
			    	i=0;	
			    	k+=1;
			    	if(k==txt.length){
			    		k=0;
			    	}
		    		setTimeout(typeWriter, 500);		    
			    }
			}
		}
		function typeWriter() {
		  if (i < txt[k].length) {
		    document.getElementById("msg").innerHTML += txt[k].charAt(i);
		    i++;
		    setTimeout(typeWriter, speed);
		  	if(i==txt[k].length){
			    j=txt[k].length;
		  		setTimeout(clear, 1000);
		  	}
		  }
		}
		typeWriter()		
	</script>


